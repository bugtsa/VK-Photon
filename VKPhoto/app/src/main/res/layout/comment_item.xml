<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/recyclerViewUserImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:src="@drawable/test" />

    <TextView
        android:id="@+id/recyclerViewName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/recyclerViewUserImage"
        android:layout_toRightOf="@id/recyclerViewUserImage"
        android:layout_toEndOf="@+id/recyclerViewUserImage"
        android:layout_centerVertical="true"
        tools:text="name"
        android:textSize="22sp"
        android:textColor="#064793" />

    <TextView
        android:id="@+id/recyclerViewUserText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recyclerViewName"
        android:layout_toRightOf="@id/recyclerViewUserImage"
        android:layout_toEndOf="@+id/recyclerViewUserImage"
        android:layout_centerVertical="true"
        tools:text="comment"
        android:textSize="19sp" />
    <TextView
        android:id="@+id/recyclerViewDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recyclerViewUserText"
        android:layout_toRightOf="@id/recyclerViewUserImage"
        android:layout_toEndOf="@+id/recyclerViewUserImage"
        android:layout_centerVertical="true"
        tools:text="Date"
        android:textSize="15sp"
        android:textColor="#9f9f9f" />

</RelativeLayout>